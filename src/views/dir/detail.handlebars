{{> general/header}}
{{#extend "css"}}
  <style>
    .detail{
        min-height: 499px;
    }
    .detailContainer a{
        color: #838383;
    }
    .secondHeader{
      display: none;
    }
    .coloredBlock{
        width:100%; 
        margin:0 auto; 
        margin-top:-1rem;
        min-height: 100px; 
        background-color: #ccc9c9;

        /**vertical middle of its child block**/
        display: flex; 
        align-items: center; 
    }

    .coloredBlock h2{
        padding-top: 0;
        color: whitesmoke;
        font-size:1.2rem;

    }
    .coloredBlock p{
        padding:0rem 0.5rem;
        
        color: black;
    }
    .coloredBlock .itemContent{
       text-align:center;
       width:100%;
    }

    .leftMenu{
        border:1px dashed #e3e3e3!important;

    }
     .eleven h3{
         margin-bottom:0;
         color:olive;
    }
    .twelve p, p>a{
        font-size:0.85rem;
    }

    .twelve .divider{
        margin: 0;
    }
    /**
    @media screen and (min-width: 768px){
        .leftMenu{
            position: fixed;

        }
    }    
    **/
    @media screen and (min-width: 768px){
    .leftMenu{
        border:0!important;
    }

    }
  </style>
{{/extend}}

   {{#if project}}
   <div class="detail">
    <div class="coloredBlock">
        <div class="itemContent">
            <h2>{{project.projectName}}</h2>
            <p>{{project.brief}}</p>
        </div>
    </div>
     
    <div class="ui column grid contentBlock detailContainer" style="margin-top: 0.5rem;">
            <div class="four wide computer sixteen wide mobile column stackable" >
                <div class="ui secondary vertical menu leftMenu">
                    {{!-- <a href="" class="active item">
                    Menu
                    </a> --}}

                    <a href="#introduction" class="active item">
                    项目介绍
                    </a>
                    {{#if project.totalSupply}}
                    <a href="#totalSupply" class="item">
                    发行总量
                    </a>
                    {{/if}}

                    {{#if project.inflation}}
                    <a href="#inflation" class="item">
                    通胀情况
                    </a>
                    {{/if}}

                    {{#if project.downloadingAddress}}
                    <a href="#downloadingAddress" class="item">
                    官网
                    </a>
                    {{/if}}

                    {{#if project.whitePaperAddress}}
                    <a href="#whitePaperAddress" class="item">
                    白皮书
                    </a>
                    {{/if}}


                    {{#if project.reputation}}
                    <a href="#reputation" class="item">
                    历史声誉记录
                    </a>
                    {{/if}}
                    {{#if project.reviews}}
                    <a href="#reviews" class="item">
                    客户评价
                    </a>
                    {{/if}}
                </div>

            </div>

            <div class="twelve wide computer sixteen wide mobile column stackable" style="padding-top: 0;">  
               
                <h3 id="introduction">项目介绍</h3>
                <p>{{{project.detail}}} </p>

                
                {{#if project.totalSupply}}
                <div class="ui divider"></div>
                <h3 id="totalSupply">发行总量</h3>
                <p>{{project.totalSupply}}</p>
                {{/if}}


                {{#if project.inflation}}
                <div class="ui divider"></div>
                <h3 id="inflation">通胀情况</h3>
                <p> {{project.inflation}}</p>
                {{/if}}

                {{#if project.downloadingAddress}}
                <div class="ui divider"></div>
                <h3 id="downloadingAddress">官网</h3>
                <p><a href="{{project.downloadingAddress}}">官网地址</a> </p>
                {{/if}}
                
                {{#if project.whitePaperAddress}}
                <div class="ui divider"></div>
                {{!-- <h3 id="github">Github (源代码)</h3>
                <p> {{project.github}}</p> --}}
                <h3 id="whitePaperAddress">白皮书</h3>
                <p> <a href="{{project.whitePaperAddress}}">白皮书地址</a> </p>
                {{/if}}





            </div>

    </div>
   </div>
{{/if}}