<script>
  var simplemde = new SimpleMDE({ 
  spellChecker: false,
	autofocus: true,
	autosave: {
		enabled: true,
		uniqueId: "detail",
		delay: 1000,
	},
  autoDownloadFontAwesome: false,
	element: document.getElementById("detail"),
//	forceSync: true,
	hideIcons: ["guide"],
	placeholder: "项目详细介绍..."
  
});
</script>


